#include <iostream>

using namespace std;

int main()
{
	char province[3] = {'A','B','C'};
	int temperature[3][7];
	
	cout << "Input the Temperature per day & per province\n";
	for (int x = 0; x < 3; x++)
	{
		for(int y = 1; y <= 7; y++)
		{
			cout << "Province " << province[x] << ", Day " << y << " : ";
			cin >> temperature[x][y];
		}
	}
	
	cout << "\n";
	
	cout << "displaying the Values \n"; 
	for (int x = 0; x < 3; x++)
	{
		for(int y = 1; y <= 7; y++)
		{
			cout << "Province " << province[x] << ", Day " << y << " : ";
			cout << temperature[x][y] << "\n";
		}
	}
return 0;
}
